---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en-us">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body class="bg-zinc-900">
    <Header />

    <main class="flex place-content-center">
      <section
        class="bg-zinc-900 glow-red bg-opacity-50 backdrop-blur-sm py-12 px-12 mt-18 mb-24 mx-4 rounded-lg shadow-lg flex flex-col justify-center items-center"
      >
        <h2 class="text-3xl font-semibold text-white mb-4 flex justify-center">
          404
        </h2>
        <p class="text-zinc-400 text-center leading-relaxed">
          Ups não estamos a encontrar a página que procuras
        </p>
        <a
          href="/"
          class="bg-red-700 hover:bg-red-800 transition-all text-white px-6 py-3 rounded-lg shadow-lg text-center"
        >
          Regressar ao início
        </a>
      </section>
    </main>
    <Footer />
  </body>
</html>
